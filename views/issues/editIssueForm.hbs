<form method="POST" action="/issues/{{issue._id}}?_method=PUT"/>
    <label for="description">Name</label>
    <input type="text" name="description" value="{{issue.description}}"/>

    <label for="createdAt">Date</label>
    <input type="date" name="createdAt" value="{{issue.createdAt}}"/>

    <label for="status">Status</label>
    <input type="text" name="status" value="{{issue.status}}"/>

    <label for="priority">Priority</label>
    <input type="text" name="priority" value="{{issue.priority}}"/>

    <input type="submit" value="Edit Issue"/>
</form>